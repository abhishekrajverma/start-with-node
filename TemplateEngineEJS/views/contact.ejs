<html>

<head>
    <title>
        <%= title%>
    </title>
    <script src="https://kit.fontawesome.com/a7c2f88a1e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/contact.css">
</head>

<body>
        <h1 id="cl">
            <i class="fa-solid fa-address-book"></i>
            My Contacts List
        </h1>
        <div class="list-container">
        <ul>
            <% for(let i of Contact){ %>
                <li class="contact">
                    <div class="details">
                    <p>
                        <%= i.name %>
                    </p>
                    <p>
                        <%= i.phone %>
                    </p>
                </div>
                <div class="delete">
                    <a href="/delete-contact/?id=<%= i._id %>">
                        <i class="fa-solid fa-window-close"></i>

                    </a>

                </div>
                </li>
                <% } %>
        </ul>
    </div>
    
    <div>
        <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter Your Name" required />
            <input type="number" name="phone" placeholder="Enter Your Phone" required />
            <button type="submit">Add Contact</button>
        </form>
    </div>
</body>
<script type="text/javascript" src="/js/contact.js"></script>

</html>